<% if(title) { %>
<h1>
    <%= title %>
</h1>
<% } else { res.redirect('/') } %>

<%- messages() %>

<div class="container">
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    <p>You're logged in</p>
    <p><a href="/account/update/<%= locals.accountData.account_id %>">Edit Account Information</a></p>

    <% if(locals.accountData && locals.accountData.account_type !== "Client") { %>
        <h3>Inventory Management</h3>
        <p><a href="/inv">Manage Inventory</a></p>
    <%}%>

    <h3>Reservation Management</h3>
    <% if(locals.accountData && locals.accountData.account_type !== "Client" ) { %>
        <p><a href="/reservation/accounts">Reservation Management</a></p>
    <%} else {%>
        <p><a href="/reservation/accounts/<%= locals.accountData.account_id %>">Reservation Management</a></p>
    <%}%>
</div>